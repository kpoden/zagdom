            <label class="radio-label"><input type="radio" data-price="3000000" name="technology" value="frame" checked> <div class="radio-custom"></div> <div class="input_text"><span class="chose_name">Каркас</span> <span>от 3 000 000 ₽</span></div></label>
            <label class="radio-label"><input type="radio" data-price="3000000" name="technology" value="brick"> <div class="radio-custom"></div> <div class="input_text"><span class="chose_name">Кирпич</span><span>от 3 000 000 ₽</span></div></label>
            <label class="radio-label"><input type="radio" data-price="3000000" name="technology" value="foam-block"> <div class="radio-custom"></div> <div class="input_text"><span class="chose_name">Пеноблок</span> <span>от 3 000 000 ₽</span></div></label>
            <label class="radio-label"><input type="radio" data-price="3000000" name="technology" value="gas-block"> <div class="radio-custom"></div> <div class="input_text"><span class="chose_name">Газоблок</span> <span>от 3 000 000 ₽</span></div></label>
            <label class="radio-label"><input type="radio" data-price="3000000" name="technology" value="sip-panels"> <div class="radio-custom"></div> <div class="input_text"><span class="chose_name">СИП-панели</span> <span>от 3 000 000 ₽</span></div></label>
